<p>What is your flight number?</p>



<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :flight %>
      <%= f.number_field :flight %>


      <%= f.submit "What is your flight number?", class: "btn btn-primary" %>
    <% end %>
  </div>
</div><br>



<% @flights.each do |flight| %>
<li><%= flight.number %></li>
<% end %>


<% if @flight %>
	<h1>Here is your flight Info</h1>
	<p>Number: <%= @flight.number %></p>
	<p>Minutes: <%= @flight.minutes %></p>
	<p>Origin: <%= @flight.origin %></p>
	<p>Destination: <%= @flight.destination %></p>

	<h3> What movie genres do you like?</h3>


	<%= form_for(@user) do |f| %>

		<p>
			<%= check_box_tag(:aaction, 1, @user.aaction) %>
			<%= label_tag(:aaction, "Action") %>
		</p>
		<p>
			<%= check_box_tag(:romance, 1, @user.romance) %>
			<%= label_tag(:romance, "Romance") %>
		</p>


		<p>
			<%= check_box_tag(:comedy, 1, @user.comedy) %>
			<%= label_tag(:comedy, "Comedy") %>
		</p>

		<%= f.hidden_field :flight, :value => @user.flight%>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>

	  <% if @common %>
		  <% @common.each do |movie| %>
		  	<p><%= movie.title %></p>
		  <% end %>
		<% end %>








<% else %>
	<h1>Enter a Valid Flight Number</h1>
<% end %>